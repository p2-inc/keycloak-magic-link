<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet author="akash@atomic.work" id="tinyurl-1.0">

    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="tiny_url"/>
      </not>
    </preConditions>

    <createTable tableName="tiny_url">
      <column name="id" type="BIGSERIAL" autoIncrement="true">
        <constraints nullable="false"/>
      </column>
      <column name="realm_id" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="url_key" type="VARCHAR(8)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="jwt_token" type="TEXT">
        <constraints nullable="false"/>
      </column>
      <column name="client_id" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
        <constraints nullable="false"/>
      </column>
      <column name="expires_at" type="TIMESTAMP WITHOUT TIME ZONE">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey
      constraintName="PK_TINY_URL"
      tableName="tiny_url"
      columnNames="id"
    />
    <createIndex indexName="idx_tiny_url_realm_id_url_key" tableName="tiny_url" unique="true">
      <column name="realm_id"/>
      <column name="url_key"/>
    </createIndex>

  </changeSet>

  <changeSet author="akash@atomic.work" id="tinyurl-1.1">

    <addColumn tableName="tiny_url">
      <column name="deleted" type="boolean" defaultValue="false">
        <constraints nullable="false" />
      </column>
      <column name="email" type="VARCHAR(255)" >
        <constraints nullable="true" />
      </column>
    </addColumn>

  </changeSet>

</databaseChangeLog>
